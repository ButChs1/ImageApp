<Window x:Class="ImageApp.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageApp.Desktop"
        mc:Ignorable="d"
        Title="Image Manager" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView x:Name="ImagesListView" Grid.Row="0" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Наименование" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Изображение" Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImageSource}" Width="100" Height="100" Stretch="Uniform"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="AddButton" Content="ДОБАВИТЬ" Click="AddButton_Click" Margin="5" Padding="10"/>
            <Button x:Name="EditButton" Content="ИЗМЕНИТЬ" Click="EditButton_Click" Margin="5" Padding="10" IsEnabled="False"/>
            <Button x:Name="DeleteButton" Content="УДАЛИТЬ" Click="DeleteButton_Click" Margin="5" Padding="10" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>